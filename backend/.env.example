# Scanalyzer Backend Configuration
# Copy this file to .env and update with your values

# Environment
DEBUG=false
ENVIRONMENT=production

# Server
HOST=127.0.0.1
PORT=8000
WORKERS=1

# Security - CHANGE THIS!
SECRET_KEY=your-secret-key-here-must-be-at-least-32-characters-long

# Database
DATABASE_NAME=scanalyzer.db
# Optional: Enable database encryption
# DATABASE_ENCRYPTION_KEY=your-encryption-key-here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Memory Management
MEMORY_LIMIT_MB=1024
MEMORY_CHECK_INTERVAL=60

# File Upload
MAX_UPLOAD_SIZE=524288000  # 500MB in bytes

# Parser Settings
MAX_CONCURRENT_PARSERS=3
PARSER_TIMEOUT=300
MAX_FINDINGS_PER_REPORT=10000