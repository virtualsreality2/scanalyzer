{
  "name": "scanalyzer",
  "version": "1.0.0",
  "description": "Intelligent Security Report Analysis for Your Desktop",
  "main": "electron/main/index.js",
  "private": true,
  "scripts": {
    "dev": "npm run dev:backend & npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && source venv/bin/activate && python -m app.main",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder --config electron/electron-builder.config.js",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "build:win": "electron-builder --win --config electron/electron-builder.config.js",
    "build:mac": "electron-builder --mac --config electron/electron-builder.config.js",
    "build:linux": "electron-builder --linux --config electron/electron-builder.config.js",
    "dist": "npm run build:frontend && npm run build:backend && cd electron && npm run dist",
    "dist:all": "npm run dist -- --win --mac --linux",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && pytest",
    "test:e2e": "cd frontend && npm run test:e2e",
    "test:validate": "node tests/validate-test-suite.ts",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && flake8 && mypy app",
    "clean": "rimraf dist build electron/dist node_modules frontend/node_modules",
    "postinstall": "electron-builder install-app-deps",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major",
    "validate:builds": "ts-node tests/validate-build.ts",
    "test:updater": "cd electron && npm run test:updater"
  },
  "keywords": [
    "security",
    "analysis",
    "prowler",
    "checkov",
    "bandit",
    "electron",
    "desktop"
  ],
  "author": "Scanalyzer Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/scanalyzer.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/scanalyzer/issues"
  },
  "homepage": "https://scanalyzer.io",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.2",
    "@percy/cli": "^1.30.11",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "conventional-changelog-cli": "^5.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5",
    "semver": "^7.6.3",
    "standard-version": "^9.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "io.scanalyzer.app",
    "productName": "Scanalyzer",
    "directories": {
      "output": "dist",
      "buildResources": "electron/resources"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "backend/**/*",
      "!backend/storage/**/*",
      "!backend/tests/**/*",
      "!backend/.env",
      "!backend/__pycache__",
      "!backend/.pytest_cache",
      "!backend/venv",
      "!**/*.pyc"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "electron/resources/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "electron/resources/entitlements.mac.plist",
      "entitlementsInherit": "electron/resources/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "electron/resources/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
