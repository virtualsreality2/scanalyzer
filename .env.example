# Scanalyzer Environment Variables Example
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
APP_NAME=Scanalyzer

# Backend
BACKEND_URL=http://localhost:8000
DATABASE_URL=postgresql://user:password@localhost:5432/scanalyzer

# Frontend
VITE_API_URL=http://localhost:8000/api/v1

# Code Signing - Windows
WINDOWS_CERTIFICATE_FILE=path/to/certificate.pfx
WINDOWS_CERTIFICATE_PASSWORD=your-certificate-password
WINDOWS_CERTIFICATE_SUBJECT=Your Company Name
WINDOWS_CERTIFICATE_SHA1=certificate-thumbprint

# Code Signing - macOS
APPLE_ID=your-apple-id@example.com
APPLE_ID_PASSWORD=app-specific-password
APPLE_TEAM_ID=TEAMID
APPLE_DEVELOPER_IDENTITY=Developer ID Application: Your Name (TEAMID)

# GitHub Release
GITHUB_OWNER=your-github-username
GITHUB_REPO=scanalyzer

# Auto-updater
UPDATE_SERVER_URL=https://updates.scanalyzer.com
UPDATE_CHANNEL=latest
UPDATE_SERVER_WEBHOOK=https://updates.scanalyzer.com/webhook
UPDATE_SERVER_TOKEN=your-update-server-token

# Development
SKIP_NOTARIZATION=false
PUBLISH_PROVIDER=github